    "version": "0.2.0",
    "configurations": [
        {
            "name": "Testing - Run Unit Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": ["./..."],
            "logOutput": "dap",
            "showLog": true,
        },
        {
            "name": "Launch - No Params",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"}
        },
        {
            "name": "Launch - Help",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--help"]
        },
