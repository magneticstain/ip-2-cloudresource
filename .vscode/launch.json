{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Testing - Run Unit Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": ["./..."],
            "logOutput": "dap",
            "showLog": true,
        },
        {
            "name": "Launch - No Params",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"}
        },
        {
            "name": "Launch - Help",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--help"]
        },
        {
            "name": "Launch - IP Param - Test IP - ALB",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=3.232.11.205"]
        },
        {
            "name": "Launch - IP Param - Test IP - ALB - Silent Output",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--silent", "--ipaddr=3.232.11.205"]
        },
        {
            "name": "Launch - IP Param - Test IP - Cloudfront",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=${env:IP2CR_CF_IP}"]
        },
        {
            "name": "Launch - IP Param - Test IP - EC2",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=${env:IP2CR_EC2_IP}"]
        },
        {
            "name": "Launch - IP Param - Test IP - EC2 - IPv6",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=${env:IP2CR_EC2_IPV6}"]
        },
        {
            "name": "Launch - IP Param - Test IP - NLB",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=${env:IP2CR_NLB_IP}"]
        },
        {
            "name": "Launch - IP Param - Test IP - Classic ELB",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=${env:IP2CR_ELB_IP}"]
        },
        {
            "name": "Launch - IP Param - Test Invalid IP",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {"AWS_REGION": "us-east-1"},
            "args": ["--ipaddr=1.1.1.1"]
        }
    ]
}